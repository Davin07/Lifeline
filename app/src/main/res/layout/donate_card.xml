<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="25dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/hosp_card_bac">

        <ImageView
            android:id="@+id/HandleBarD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/handle"
            android:padding="20dp"/>


        <TextView
            android:id="@+id/DCard_Bloodtype"
            android:layout_width="53dp"
            android:layout_height="44dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="70dp"
            android:layout_toEndOf="@+id/HandleBarD"
            android:fontFamily="@font/lato_black"
            android:text="A"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="36sp" />

        <ImageView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="85dp"
            android:padding="1dp"
            android:layout_toRightOf="@+id/DCard_Bloodtype"
            android:layout_marginStart="0dp"/>

        <ImageView
            android:id="@+id/DividerD"
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/HandleBarD"
            android:layout_marginStart="20dp"
            android:layout_marginTop="125dp"
            android:layout_marginEnd="28dp"
            app:srcCompat="@drawable/divider" />

        <TextView
            android:id="@+id/HospName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/lato_black"
            android:text="Apollo Hospital"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:layout_toEndOf="@+id/HandleBarD"
            android:layout_marginStart="65dp"/>

        <TextView
            android:id="@+id/HospAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kden Layout, 41st Cross, Main Road"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:lines="4"
            android:textAlignment="gravity"
            android:layout_toEndOf="@+id/type"
            android:layout_marginStart="15dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="60dp" />



        <ImageView
            android:id="@+id/PhoneHosp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/phone"
            android:layout_toEndOf="@+id/HandleBarD"
            android:layout_below="@+id/DividerD"
            android:layout_marginStart="65dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/PhoneHospNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9886387227"
            android:textSize="20sp"
            android:fontFamily="@font/lato"
            android:textColor="@color/black"
            android:layout_toEndOf="@+id/PhoneHosp"
            android:layout_below="@+id/DividerD"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"/>


    </RelativeLayout>


</androidx.cardview.widget.CardView>

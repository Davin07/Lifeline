<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <!-- Welcome to -->
        <TextView
            android:id="@+id/Register_Donor_Welcome"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="132dp"
            android:fontFamily="@font/lato"
            android:text="@string/welcome2"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.182"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <!-- Lifeline Red -->
        <TextView
            android:id="@+id/Register_Donor_Lifeline2"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="132dp"
            android:layout_toEndOf="@+id/Register_Donor_Welcome"
            android:fontFamily="@font/lato_bold"
            android:text="@string/lifeline"
            android:textColor="#FF5555"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/Register_Donor_Welcome"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Save a life line -->
        <TextView
            android:id="@+id/Register_Donor_save2"
            android:layout_width="321dp"
            android:layout_height="50dp"
            android:layout_marginTop="172dp"
            android:fontFamily="@font/lato"
            android:lines="2"
            android:text="@string/Save"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/HospRegisterBtn"
            android:layout_width="225dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="44dp"
            android:background="@drawable/rounded_corners"
            android:fontFamily="@font/lato_black"
            android:hapticFeedbackEnabled="true"
            android:text="@string/register"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp"
            app:backgroundTint="#FF5555"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Register_Hosp_address" />

        <EditText
            android:id="@+id/Register_Hosp_name"
            android:layout_width="344dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:background="@drawable/edit_round"
            android:drawableLeft="@drawable/hospital"
            android:drawablePadding="10dp"
            android:hint="Name"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Register_Donor_save2" />

        <EditText
            android:id="@+id/Register_Hosp_email"
            android:layout_width="344dp"
            android:layout_height="50dp"
            android:layout_below="@+id/Register_Hosp_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_round"
            android:drawableLeft="@drawable/email"
            android:drawablePadding="10dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Register_Hosp_name" />


        <EditText
            android:id="@+id/Register_Hosp_password"
            android:layout_width="344dp"
            android:layout_height="50dp"
            android:layout_below="@+id/Register_Hosp_email"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_round"
            android:drawableLeft="@drawable/password"
            android:drawablePadding="10dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Register_Hosp_email" />

        <EditText
            android:id="@+id/Register_Hosp_phoneno"
            android:layout_width="344dp"
            android:layout_height="50dp"
            android:layout_below="@+id/Register_Hosp_password"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_round"
            android:drawableLeft="@drawable/phone"
            android:drawablePadding="10dp"
            android:hint="Phone No."
            android:inputType="number"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Register_Hosp_password" />

        <EditText
            android:id="@+id/Register_Hosp_address"
            android:layout_width="344dp"
            android:layout_height="50dp"
            android:layout_below="@+id/Register_Hosp_phoneno"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_round"
            android:drawableLeft="@drawable/location"
            android:drawablePadding="10dp"
            android:hint="Address"
            android:inputType="textPostalAddress"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Register_Hosp_phoneno" />


        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>